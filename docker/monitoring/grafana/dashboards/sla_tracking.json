{
  "dashboard": {
    "id": null,
    "title": "SLA Tracking",
    "tags": ["sla", "approval", "rbac"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Approval Completion Rate (Target: 95%)",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "(sum(increase(approval_requests_total{status=\"approved\"}[24h])) / (sum(increase(approval_requests_total[24h])) - sum(increase(approval_requests_total{status=\"pending\"}[24h])))) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "max": 100,
            "min": 0,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 95}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Average Approval Time (Target: < 2min)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "rate(approval_response_time_seconds_sum[1h]) / rate(approval_response_time_seconds_count[1h])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 60},
                {"color": "red", "value": 120}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "RBAC Check Success Rate (Target: 99.9%)",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "(sum(increase(rbac_permission_checks_total{result=\"allowed\"}[24h])) / sum(increase(rbac_permission_checks_total[24h]))) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "max": 100,
            "min": 98,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 98},
                {"color": "yellow", "value": 99},
                {"color": "green", "value": 99.9}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Approval Timeouts (Target: < 1 per hour)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(approval_timeout_total[1h])",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Approval Response Time Distribution (p50/p95/p99)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.5, rate(approval_response_time_seconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(approval_response_time_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(approval_response_time_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ]
      }
    ]
  }
}
