{
  "dashboard": {
    "id": null,
    "title": "RBAC Metrics",
    "tags": ["rbac", "security"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Permission Checks - Allowed",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(rbac_permission_checks_total{result=\"allowed\"}[1h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "fixed", "fixedColor": "green"}
          }
        }
      },
      {
        "id": 2,
        "title": "Permission Checks - Denied",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(rbac_permission_checks_total{result=\"denied\"}[1h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "fixed", "fixedColor": "red"}
          }
        }
      },
      {
        "id": 3,
        "title": "Permission Check Rate (Allowed vs Denied)",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum by (result) (rate(rbac_permission_checks_total[5m]))",
            "legendFormat": "{{result}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Permission Checks Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(rbac_permission_checks_total[5m])",
            "legendFormat": "{{result}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Role Assignments by Role",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum by (role) (rbac_role_assignments_total)",
            "legendFormat": "{{role}}",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
