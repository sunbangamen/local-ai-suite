{
  "dashboard": {
    "id": null,
    "title": "Approval Workflow Metrics",
    "tags": ["approval", "security"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Approval Requests - Total Count",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(approval_requests_total[1h]))",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Approval Requests by Status",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum by (status) (approval_requests_total)",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Timed Out Approvals",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "increase(approval_timeout_total[1h])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Approval Response Time (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(approval_response_time_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Approval Status Timeline",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(approval_requests_total[5m])",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
