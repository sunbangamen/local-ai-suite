{
  "name": "local-ai-desktop",
  "version": "1.0.0",
  "description": "Claude Desktop style app with MCP integration",
  "main": "src/main.js",
  "scripts": {
    "start": "./node_modules/electron/dist/electron .",
    "dev": "./node_modules/electron/dist/electron . --dev",
    "web": "cd src && python3 -m http.server 3000",
    "rebuild": "npm rebuild --runtime=electron",
    "test:e2e": "playwright test",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed"
  },
  "keywords": [
    "electron",
    "mcp",
    "ai",
    "playwright",
    "notion"
  ],
  "author": "Local AI Suite",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "electron": "^26.6.10",
    "marked": "^9.1.2",
    "dompurify": "^3.0.5",
    "highlight.js": "^11.9.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.0"
  }
}
